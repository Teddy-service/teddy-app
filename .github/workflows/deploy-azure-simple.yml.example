# 간단한 버전 - Storage Account Key만 사용
# 이 파일을 사용하려면 .example을 제거하고 deploy-azure.yml 대신 사용하세요

name: Deploy to Azure Storage (Simple)

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install and Build
        run: |
          npm ci
          npm run build

      - name: Upload to Azure Storage
        uses: azure/CLI@v1
        with:
          inlineScript: |
            az storage blob upload-batch \
              --account-name ${{ secrets.AZURE_STORAGE_ACCOUNT_NAME }} \
              --account-key ${{ secrets.AZURE_STORAGE_ACCOUNT_KEY }} \
              --destination '$web/websites' \
              --source ./dist \
              --overwrite true \
              --auth-mode key

      - name: Success
        run: echo "✅ Deployed to https://${{ secrets.AZURE_STORAGE_ACCOUNT_NAME }}.z20.web.core.windows.net/websites/"

